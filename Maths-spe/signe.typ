  + $ x + 2 = 7 $
  + $ x - 3 = 5 $ 
  + $ 3x = -12 $ 
  + $ 2x = 0 $ 
  + $ 4x - 5 = 7 $ 
  + $ 2x = 4x - 8 $ 
  + $ -2x + 6 = 3x - 4 $ 
